---
import LogoImage from "./LogoImage.astro";
import LogoVideo from "./LogoVideo.astro";
---

<span class="justify-center items-center flex mt-5"
    ><p class="text-gray-500">pulse una imagen para visualizar</p></span
>
<header class="mt-5 justify-center items-center flex flex-row">
    <nav
        class="flex flex-row justify-center space-x-10 max-[360px]:flex-col
        max-[360px]:items-center max-[360px]:space-x-0 max-[360px]:space-y-5"
    >
        <ul class="text-2xl font-semibold flex flex-row gap-5">
            <button class="duration-500">
                <a href="/" class="justify-center items-center flex">
                    <LogoImage />Images
                </a>
            </button>
            <button class="duration-500">
                <a class="justify-center items-center flex" href="/gallery">
                    <LogoVideo />Videos
                </a>
            </button>
        </ul>
    </nav>
</header>
